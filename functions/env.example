# デフォルトテナント設定
DEFAULT_TENANT=futurestudio
DEFAULT_LP_ID=emolink.cloud

# Gmail SMTP設定
GMAIL_USER=emolink.guide@gmail.com
GMAIL_APP_PASSWORD=your_app_password_here

# reCAPTCHA設定
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# アプリケーション設定
APP_CLAIM_CONTINUE_URL=https://emolink.net/claim
APP_FIREBASE_WEB_API_KEY=your_firebase_web_api_key_here

# CORS設定
CORS_ALLOWED_ORIGINS=http://localhost:3001,https://emolink.cloud,https://emolink-lp.web.app,https://emolink.net,https://emolink.web.app

# テナント設定（JSON形式）
